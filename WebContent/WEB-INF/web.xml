<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<web-app xmlns:xsi="http:www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>jsp</display-name>
	
	<servlet>
		<servlet-name>ListServlet</servlet-name>
		<servlet-class>com.demo.servlet.ListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListServlet</servlet-name>
		<url-pattern>/List.action</url-pattern>  <!-- 对List.action地址的请求都交给LoginServlet类来处理 -->
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteOneServlet</servlet-name>
		<servlet-class>com.demo.servlet.DeleteOneServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteOneServlet</servlet-name>
		<url-pattern>/DeleteOneServlet.action</url-pattern>  
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>DeleteBatchServlet</servlet-name>
		<servlet-class>com.demo.servlet.DeleteBatchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteBatchServlet</servlet-name>
		<url-pattern>/DeleteBatchServlet.action</url-pattern>  
	</servlet-mapping>		
	
	<servlet>
		<servlet-name>InitTalkServlet</servlet-name>
		<servlet-class>com.demo.servlet.InitTalkServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitTalkServlet</servlet-name>
		<url-pattern>/InitTalkServlet.action</url-pattern>  
	</servlet-mapping>			
	
	<servlet>
		<servlet-name>AutoReplyServlet</servlet-name>
		<servlet-class>com.demo.servlet.AutoReplyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AutoReplyServlet</servlet-name>
		<url-pattern>/AutoReplyServlet.action</url-pattern>  
	</servlet-mapping>		
</web-app>